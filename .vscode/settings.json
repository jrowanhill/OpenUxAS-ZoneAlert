{
    "python.pythonPath": ".vpython/bin/python3",

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/sbx/**": true,
        "**/software/**": true,
    },
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.tree.renderIndentGuides": "none",
    "[pvs]": {
        "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}|;:'\",.<>/"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.???~": true,
        "**/.pvscontext": true,
        "**/pvsbin": true,
        "**/*.jprf": true,
        "**/*.prf": true,
        "**/orphaned-proofs.prf": true,
        "**/*_adt.pvs": false,
        "**/*.log": true,
        "**/.vscode": true
    }
}